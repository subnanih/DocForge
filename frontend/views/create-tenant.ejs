<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <%- include('partials/navbar') %>
    
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white rounded-2xl shadow-xl p-8">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-plus text-white text-2xl"></i>
                </div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Create New Tenant</h1>
                <p class="text-gray-600">Set up your organization's documentation workspace</p>
            </div>

            <!-- Form -->
            <form id="create-tenant-form" class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                        Organization Name *
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                        placeholder="Enter your organization name"
                    >
                </div>

                <div>
                    <label for="domain" class="block text-sm font-medium text-gray-700 mb-2">
                        Domain *
                    </label>
                    <input 
                        type="text" 
                        id="domain" 
                        name="domain" 
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                        placeholder="example.com"
                    >
                    <p class="text-sm text-gray-500 mt-1">Your organization's domain (used for identification)</p>
                </div>

                <button 
                    type="submit" 
                    id="submit-btn"
                    data-original-text="Create Tenant"
                    class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-3 px-6 rounded-lg font-semibold hover:shadow-lg transform hover:scale-105 transition-all duration-200 btn-animate"
                >
                    <i class="fas fa-rocket mr-2"></i>
                    Create Tenant
                </button>
            </form>

            <!-- Success Result -->
            <div id="success-result" class="hidden mt-8 p-6 bg-green-50 border border-green-200 rounded-lg">
                <div class="flex items-center mb-4">
                    <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center mr-3">
                        <i class="fas fa-check text-white"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-green-800">Tenant Created Successfully!</h3>
                </div>
                
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-green-700 mb-1">Organization</label>
                        <p id="result-name" class="text-green-800 font-semibold"></p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-green-700 mb-1">Domain</label>
                        <p id="result-domain" class="text-green-800"></p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-green-700 mb-1">API Key</label>
                        <div class="flex items-center space-x-2">
                            <code id="result-api-key" class="flex-1 bg-green-100 text-green-800 px-3 py-2 rounded font-mono text-sm break-all"></code>
                            <button 
                                onclick="copyApiKey()" 
                                class="bg-green-600 text-white px-3 py-2 rounded hover:bg-green-700 transition-colors duration-200"
                                title="Copy API Key"
                            >
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                        <p class="text-sm text-green-600 mt-1">
                            <i class="fas fa-exclamation-triangle mr-1"></i>
                            Save this API key securely - you'll need it to access your tenant!
                        </p>
                    </div>
                </div>

                <div class="flex space-x-4 mt-6">
                    <a 
                        id="dashboard-link" 
                        href="#" 
                        class="flex-1 bg-green-600 text-white text-center py-3 px-4 rounded-lg font-semibold hover:bg-green-700 transition-colors duration-200"
                    >
                        <i class="fas fa-tachometer-alt mr-2"></i>
                        Go to Dashboard
                    </a>
                    <button 
                        onclick="createAnother()" 
                        class="flex-1 bg-gray-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-gray-700 transition-colors duration-200"
                    >
                        <i class="fas fa-plus mr-2"></i>
                        Create Another
                    </button>
                </div>
            </div>

            <!-- Info Box -->
            <div class="mt-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                <h4 class="font-semibold text-blue-800 mb-2">
                    <i class="fas fa-info-circle mr-2"></i>
                    What happens next?
                </h4>
                <ul class="text-sm text-blue-700 space-y-1">
                    <li>• Your tenant workspace will be created instantly</li>
                    <li>• You'll receive a unique API key for authentication</li>
                    <li>• Use the API key to access your dashboard and create documentation</li>
                    <li>• Integrate with AI assistants using our MCP server</li>
                </ul>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    
    <script src="/js/main.js"></script>
    <script>
        document.getElementById('create-tenant-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submit-btn');
            const formData = new FormData(this);
            const data = Object.fromEntries(formData.entries());
            
            // Validate form
            if (!validateForm(this)) {
                showNotification('Please fill in all required fields', 'error');
                return;
            }
            
            setLoading(submitBtn, true);
            
            try {
                const response = await fetch('/api/tenant', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                if (!response.ok) {
                    const error = await response.text();
                    throw new Error(error);
                }
                
                const result = await response.json();
                
                // Auto-save the new tenant
                const tenants = JSON.parse(localStorage.getItem('docforge_tenants') || '[]');
                tenants.push({
                    apiKey: result.apiKey,
                    name: result.tenant.name,
                    domain: result.tenant.domain,
                    lastUsed: new Date().toISOString()
                });
                localStorage.setItem('docforge_tenants', JSON.stringify(tenants));
                
                // Show success result
                document.getElementById('result-name').textContent = result.tenant.name;
                document.getElementById('result-domain').textContent = result.tenant.domain;
                document.getElementById('result-api-key').textContent = result.apiKey;
                document.getElementById('dashboard-link').href = `/dashboard?apiKey=${result.apiKey}`;
                
                document.getElementById('create-tenant-form').classList.add('hidden');
                document.getElementById('success-result').classList.remove('hidden');
                
                showNotification('Tenant created successfully!', 'success');
                
            } catch (error) {
                console.error('Error:', error);
                showNotification(`Error: ${error.message}`, 'error');
            } finally {
                setLoading(submitBtn, false);
            }
        });
        
        function copyApiKey() {
            const apiKey = document.getElementById('result-api-key').textContent;
            copyToClipboard(apiKey, 'API Key copied to clipboard!');
        }
        
        function createAnother() {
            document.getElementById('create-tenant-form').classList.remove('hidden');
            document.getElementById('success-result').classList.add('hidden');
            document.getElementById('create-tenant-form').reset();
        }
    </script>
</body>
</html>
