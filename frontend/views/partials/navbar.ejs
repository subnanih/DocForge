<script>
// Tenant dropdown toggle
document.addEventListener('DOMContentLoaded', function() {
    const tenantSelector = document.getElementById('tenant-selector');
    const tenantDropdown = document.getElementById('tenant-dropdown');
    
    if (tenantSelector && tenantDropdown) {
        tenantSelector.addEventListener('click', function() {
            tenantDropdown.classList.toggle('hidden');
        });
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            if (!tenantSelector.contains(event.target) && !tenantDropdown.contains(event.target)) {
                tenantDropdown.classList.add('hidden');
            }
        });
    }
});

// Copy API key function
function copyApiKey() {
    const apiKey = new URLSearchParams(window.location.search).get('apiKey');
    if (apiKey) {
        copyToClipboard(apiKey, 'API Key copied to clipboard!');
    }
    document.getElementById('tenant-dropdown').classList.add('hidden');
}
</script>
